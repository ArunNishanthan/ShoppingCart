<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/image/shopify.png" />
    <title>@ViewBag.Title | Adobe</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("_navBar")
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer >
            <p class="center1">Made with <span class="glyphicon glyphicon-heart text-danger"></span> by Team 3A</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @RenderSection("scripts", required: false)
</body>
</html>
