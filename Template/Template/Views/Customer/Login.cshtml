@model Template.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginPage.cshtml";
}

<div class="container center1">
    <div class="box">
        <h1>Adobe Store</h1>
        <h3>Login Page</h3>

        @using (Html.BeginForm())
        {

            <div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "userid", placeholder = "User Id" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "pwd", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.AntiForgeryToken()
            <input type="submit" class="btn btn-primary" value="Submit" />

            @Html.HiddenFor(m => m.clickedFrom)
            <br />
            <br />
        }

        <p>Don't have account?</p>
        <a href="/Customer/Register" class="btn btn-sm btn-success">Register</a>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}